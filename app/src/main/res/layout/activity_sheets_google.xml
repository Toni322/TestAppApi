<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:id="@+id/text_inf_google_sheet"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/button_read_from_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_read_from_sheet"
            android:layout_weight="1" />

        <Button
            android:text="@string/button_write_to_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_write_to_sheet"
            android:layout_weight="1" />

        <Button
            android:text="button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_weight="1" />

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/text_inf_google_sheet"
        android:layout_alignLeft="@+id/text_inf_google_sheet"
        android:layout_alignStart="@+id/text_inf_google_sheet"
        android:layout_marginTop="186dp"
        android:id="@+id/edit_text_username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/edit_text_username"
        android:layout_alignRight="@+id/edit_text_username"
        android:layout_alignEnd="@+id/edit_text_username"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_text_teacher_name" />
</RelativeLayout>