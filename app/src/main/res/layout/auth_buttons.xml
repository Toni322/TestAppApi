<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <Button
        android:text="@string/button_sign_in_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_log_in_google_plus"/>
    <Button
        android:text="@string/button_sign_in_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_log_in_facebook"/>
    <Button
        android:text="@string/button_sign_in_linkedin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_log_in_linkedin"/>

    <Button
        android:text="@string/button_sign_in_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_log_in_twitter"/>

</LinearLayout>