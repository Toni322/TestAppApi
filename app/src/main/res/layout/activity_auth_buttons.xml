<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_auth_buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.examplenasa.roma.mytestapp.Auth_buttons">

    <Button
        android:text="@string/button_sign_in_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_log_in_twitter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <Button
        android:text="@string/button_sign_in_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_log_in_facebook"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignBaseline="@+id/button_log_in_linkedin"
        android:layout_alignBottom="@+id/button_log_in_linkedin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/button_sign_in_linkedln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_log_in_linkedin"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button_log_in_twitter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/button_sign_in_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_log_in_google"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_log_in_facebook"
        android:layout_alignEnd="@+id/button_log_in_facebook" />

</RelativeLayout>
